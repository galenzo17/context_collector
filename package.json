{
  "name": "context-collector",
  "displayName": "Context Collector",
  "description": "Select files and copy them to proompt.txt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:promptFileBuilderView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-builder-activitybar",
          "title": "Prompt Builder",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "prompt-builder-activitybar": [
        {
          "id": "promptFileBuilderView",
          "name": "Select Files",
          "type": "webview",
          "contextualTitle": "Prompt File Builder"
        }
      ]
    },
    "commands": [
      {
        "command": "promptFileBuilder.copyContent",
        "title": "Copy Selected Content to prompt.txt"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run watch:esbuild",
    "watch": "npm run esbuild-watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "esbuild": "^0.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
